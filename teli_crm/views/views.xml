<odoo>
    <data>
        <!-- explicit list view definition -->
        <record id="teli_crm.list" model="ir.ui.view">
            <field name="name">teli_crm.list</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_form_view_leads"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//button[@name='123']" position="replace">
                        <button name="123" string="Convert to Account" type="action"
                            class="oe_highlight" attrs="{'invisible': [('type', '=', 'convert')]}"/>
                    </xpath>
                    <xpath expr="//page[@name='extra']" position="after">
                        <page string="teli Settings">
                            <group>
                                <field name="username"/>
                                <field name="account_credit"/>
                                <field name="uuid"/>
                            </group>
                        </page>
                    </xpath>
                </data>
            </field>
        </record>

        <record id="teli_crm.list_opportunity" model="ir.ui.view">
            <field name="name">teli_crm.list.opportunity</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//page[@name='lead']" position="after">
                        <page string="teli Info">
                            <group>
                                <field name="username"/>
                                <field name="account_credit"/>
                                <field name="uuid"/>
                            </group>
                        </page>
                    </xpath>
                </data>
            </field>
        </record>

    </data>
</odoo>
