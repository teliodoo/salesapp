<odoo>
    <data>
        <!-- explicit list view definition -->
        <record id="teli_users.partner_form_view" model="ir.ui.view">
            <field name="name">teli_users.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='type']" position="attributes">
                        <attribute name="invisible">1</attribute>
                    </xpath>
                    <xpath expr="//div[@class='o_address_format']" position="attributes">
                        <attribute name="invisible">1</attribute>
                    </xpath>
                    <xpath expr="//label[@for='street']" position="attributes">
                        <attribute name="invisible">1</attribute>
                    </xpath>
                    <xpath expr="//notebook" position="inside">
                        <page string="Social Media Information">
                            <group>
                                <field name="web_technologies"/>
                            </group>
                            <group string="Twitter">
                                <field name="twitter" widget="url"/>
                                <field name="twitter_bio"/>
                            </group>
                            <group string="Facebook">
                                <field name="facebook" widget="url"/>
                                <field name="facebook_notes"/>
                            </group>
                            <group string="LinkedIn">
                                <field name="linkedin" widget="url"/>
                                <field name="linkedin_bio"/>
                                <field name="linkedin_notes"/>
                            </group>
                        </page>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</odoo>
